<h1>Listing questions</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr class="success">
      <th>ID</th>
      <th>Title</th>
      <th colspan="3">Action</th>
    </tr>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.title %></td>
        <td><%= link_to 'Show', question, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_question_path(question), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path, class: 'btn btn-success' %>
